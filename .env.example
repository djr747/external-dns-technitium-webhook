# Example environment variables
# Copy this file to .env and fill in your values

# Server configuration
LISTEN_ADDRESS=0.0.0.0
# LISTEN_PORT is fixed to 8888 in the container image and is not configurable via environment variables.

# Technitium DNS configuration
TECHNITIUM_URL=http://localhost:5380
TECHNITIUM_USERNAME=admin
TECHNITIUM_PASSWORD=admin

# DNS zone configuration
ZONE=example.com

# Optional domain filters (semicolon-separated)
# DOMAIN_FILTERS=subdomain1.example.com;subdomain2.example.com

# Logging
LOG_LEVEL=INFO
